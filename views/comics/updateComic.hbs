<H1>EDITA TU CÓMIC</H1>

<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar cómic {{name}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/newComic/edit/{{theComic._id}}" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{theComic.name}}" placeholder="{{theComic.name}}">
        </div>

        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input"
            value="{{theComic.description}}">
        </div>

        <div class="form-group">
          <label for="issues-input">issuesNumber</label>
          <input name="issuesNumber" type="text" class="form-control" id="issues-input"
            value="{{theComic.issuesNumber}}">
        </div>


        <div class="form-group">
          <label for="type-list">resourceTypes:</label>
          <select name="type" class="form-control" id="type-list">
            <option disabled selected value>Seleccionar</option>
            <option>volume</option>
            <option>Issue</option>
          </select>
        </div>

        <div class="form-group">
          <label for="publisher-input">Publisher Name</label>
          <input name="publisher" type="text" class="form-control" id="publisher-input" value="{{theComic.publisherName}}" placeholder="Publisher name">
        </div>

        <div class="form-group">
          <label for="volume-input">Volume</label>
          <input name="volume" type="text" class="form-control" id="volume-input" value="{{theComic.volume}}" placeholder="Volume">
        </div>

        <div class='form-group'>
          <label for='input2'>Image:</label>
          <input name='imgFile' type='file' id='input2' placeholder="Image">
        </div>
        

        <button type="submit" class="btn btn-dark">Guardar edición</button>
        <a href="/newComic/comicsList" class="btn btn-dark">Volver</a>

      </form>

